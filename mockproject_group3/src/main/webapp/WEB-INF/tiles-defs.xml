<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- =========================================================================================================== -->
	<!-- Base Default template -->
	<!-- =========================================================================================================== -->
	<definition name="base.defaultTemplate" template="/WEB-INF/template/default/template.jsp">
		<put-attribute name="header" value="/WEB-INF/template/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/template/footer.jsp" />
	</definition>
	<!-- =========================================================================================================== -->
	<!-- Child views Default template commons -->
	<definition name="default/commons/*" extends="base.defaultTemplate">
		<put-attribute name="title" value="title.commons.{1}" />
		<put-attribute name="body"
			value="/WEB-INF/views/default/commons/{1}.jsp" />
	</definition>
	
	<!-- Child views Default template commons -->
	<definition name="default/html-exceptions/*" extends="base.defaultTemplate">
		<put-attribute name="title" value="title.html-exceptions.{1}" />
		<put-attribute name="body"
			value="/WEB-INF/views/default/html-exceptions/{1}.jsp" />
	</definition>
	
	<!-- Child views Default template commons -->
	<definition name="default/agreement/*" extends="base.defaultTemplate">
		<put-attribute name="title" value="title.agreement.{1}" />
		<put-attribute name="body" value="/WEB-INF/views/default/agreement/{1}.jsp" />
	</definition>
	<!-- =========================================================================================================== -->
	<!-- Base First template -->
	<!-- =========================================================================================================== -->
	<!-- =========================================================================================================== -->
	<!-- Base First template -->
	<!-- =========================================================================================================== -->
	<definition name="base.firstTemplate" template="/WEB-INF/template/first/template.jsp">
		<put-attribute name="header" value="/WEB-INF/template/header.jsp" />
		<put-attribute name="left-sidebar"
			value="/WEB-INF/template/first/left-sidebar.jsp" />
		<put-attribute name="footer" value="/WEB-INF/template/footer.jsp" />
	</definition>
	<!-- =========================================================================================================== -->
	<!-- Child views First template commons -->
	<definition name="first/commons/*" extends="base.firstTemplate">
		<put-attribute name="title" value="title.commons.{1}" />
		<put-attribute name="body"
			value="/WEB-INF/views/first/commons/{1}.jsp" />
	</definition>
	
	<!-- Child views First template commons PROFILE -->
	<definition name="first/commons/profile" extends="base.firstTemplate">
		<put-attribute name="title" value="title.commons.profile" />
		<put-attribute name="left-sidebar"
			value="/WEB-INF/views/first/commons/left-profile-sidebar.jsp" />
		<put-attribute name="body"
			value="/WEB-INF/views/first/commons/profile.jsp" />
	</definition>
	
</tiles-definitions>